<BuahScreen>:
    canvas.before:
        Color:
            rgba: 0.894, 0.894, 0.894, 1.0
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        # Circular button with arrow-left for navigation
        FloatLayout:
            size_hint: None, None
            size: 1200, 185  # You can adjust the size here
            pos_hint: {'center_x': 0.5, 'top': 1.14}  # Adjust position
            canvas.before:
                # Menggambar bayangan
                Color:
                    rgba: 0.0, 0.0, 0.0, 0.25  # Warna bayangan (hitam transparan)
                Ellipse:
                    pos: self.x + 1, self.y - 3  # Offset bayangan
                    size: self.size

                # Menggambar latar belakang
                Color:
                    rgba: 0.0, 1.0, 1.0, 1.0  # Cyan color (adjust if needed)
                Ellipse:
                    pos: self.pos
                    size: self.size

        # Tombol kembali
        FloatLayout:
            size_hint: None, None
            size: 60, 60
            pos_hint: {'x': 0.03, 'top': 0.96}

            canvas.before:
                Color:
                    rgba: 0.502, 0.502, 0.502, 1.0  # Gray fill
                Ellipse:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 0, 0, 0, 1  # Black stroke
                Line:
                    width: 1.5
                    circle: (self.center_x, self.center_y, 30.5)
                    dash_length: 2
                    dash_offset: 1

            Image:
                source: 'Image/arrow-left.png'
                size_hint: None, None
                size: 35, 35
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Button:
                background_color: 0, 0, 0, 0
                size_hint: None, None
                size: 60, 60
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_press: root.go_to_mengenalbs()

        # Label utama
        Label:
            text: 'APEL'
            font_size: '50sp'
            font_name: "Font/PoetsenOne-Regular.ttf"
            color: 1.0, 1.0, 1.0, 1.0
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x': 0.5, 'top': 0.99}
            outline_color: 0.0, 0.0, 0.0, 1.0
            outline_width: 3

        # Tempat untuk Soal gambar buah dan panah di bawah label APEL
        Image:
            source: 'Image/Buah/Soal_apel.png'  # Gambar buah (apel)
            size_hint: None, None
            size: 250, 250
            pos_hint: {'center_x': 0.5, 'top': 0.77}

        Image:
            source: 'Image/arrow-right.png'  # Gambar panah
            size_hint: None, None
            size: 100, 100
            pos_hint: {'center_x': 0.8, 'top': 0.65}

        # Persegi panjang tempat jawaban dengan sudut melengkung
        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: 975, 145
            pos_hint: {'center_x': 0.5, 'top': 0.29}
            padding: 20
            spacing: 40
            halign: 'center'
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # Warna putih untuk background
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [30]  # Radius untuk sudut melengkung

            # Tempat jawaban
            # Tempatkan 7 gambar buah di sini
            Image:
                source: 'Image/Buah/Apel.png'  # Gambar jawaban pertama
                size_hint: None, None
                size: 100, 100

            Image:
                source: 'Image/Buah/Ceri.png'  # Gambar jawaban kedua
                size_hint: None, None
                size: 100, 100

            Image:
                source: 'Image/Buah/Durian.png'  # Gambar jawaban ketiga
                size_hint: None, None
                size: 100, 100

            Image:
                source: 'Image/Buah/Mangga.png'  # Gambar jawaban keempat
                size_hint: None, None
                size: 100, 100

            Image:
                source: 'Image/Buah/Lemon.png'  # Gambar jawaban kelima
                size_hint: None, None
                size: 100, 100

            Image:
                source: 'Image/Buah/Pisang.png'  # Gambar jawaban keenam
                size_hint: None, None
                size: 100, 100

            Image:
                source: 'Image/Buah/Naga.png'  # Gambar jawaban ketujuh
                size_hint: None, None
                size: 100, 100
