            pos_hint: {'center_x': 0.45, 'top': 0.7}
            spacing: 150

            # Mempelajari Image Box
            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, None)
                size: (300, 250)
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                # Image:
                Label:
                    id: mempelajari_image  # Menambahkan id untuk akses di Python
                    # source: 'Image/Mempelajari.png'
                    text: 'Image'
                    font_size: '23sp'
                    font_name: "PoetsenOne-Regular.ttf"
                    color: 0.0, 0.0, 0.0, 1.0
                    size_hint: (None, None)
                    width: 285
                    height: 260
                    halign: 'center'
                    pos_hint: {'center_x': 0.50, 'top': 0.9}

        # Permainan Image Box
            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, None)
                size: (300, 250)
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                # Image:
                Label:
                    id: permainan_image  # Menambahkan id untuk akses di Python
                    # source: 'Image/Permainan.png'
                    text: 'Image'
                    font_size: '23sp'
                    font_name: "PoetsenOne-Regular.ttf"
                    color: 0.0, 0.0, 0.0, 1.0
                    size_hint: (None, None)
                    width: 290
                    height: 250
                    halign: 'center'
                    pos_hint: {'center_x': 0.50, 'top': 0.9}

        Label:
            text: 'Mempelajari'
            font_size: '23sp'
            font_name: "Mogra-Regular.ttf"
            color: 0.0, 0.0, 0.0, 1.0
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x': 0.27, 'top': 0.27}

        Label:
            text: 'Permainan'
            font_size: '23sp'
            font_name: "Mogra-Regular.ttf"
            color: 0.0, 0.0, 0.0, 1.0
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x': 0.73, 'top': 0.27}

        RoundedButtonWithStroke:
            text: 'Keluar'
            size_hint: (None, None)
            size: (150, 50)
            pos_hint: {'right': 0.98, 'top': 0.98}
            on_press: root.show_logout_popup()

