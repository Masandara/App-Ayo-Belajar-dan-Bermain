<MempelajariScreen>:
    canvas.before:
        Color:
            rgba: 0.65, 0.65, 0.65, 1.0 # 0.408, 0.992, 0.894, 1.0 => Warna aqua/turquoise
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        # Circular button with jagged edges and arrow image inside
        FloatLayout:
            size_hint: None, None
            size: 55, 55
            pos_hint: {'x': 0.02, 'top': 0.98}
            canvas.before:
                Color:
                    rgba: 0.502, 0.502, 0.502, 1.0 # 0, 0, 0, 1  # Black background
                Ellipse:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 0, 0, 0, 1 # 1, 1, 1, 1  # White stroke
                Line:
                    width: 1.5  # Adjustable stroke thickness
                    circle: (self.center_x, self.center_y, 25)  # Circle with radius 40
                    dash_length: 2  # Jagged effect with dash
                    dash_offset: 1

            Image:
                source: 'Image/arrow-left.png'  # Add your arrow image path
                size_hint: None, None
