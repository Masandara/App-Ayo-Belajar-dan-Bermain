<HomeScreen>:  # Mengganti dari LoginScreen ke HomeScreen

    # canvas.before:
    #     Color:
    #         rgba:  0.65, 0.65, 0.65, 1.0 # 0.408, 0.992, 0.894, 1.0
    #         # 0.65, 0.65, 0.65, 1.0 => Warna aqua/turquoise
    #     Rectangle:
    #         pos: self.pos
    #         size: self.size

    Image:
        source: 'Bg/Bg3.png'
        size_hint: (1, 1)
        size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20
        FloatLayout:
            Label:
                text: 'Masukkan Nama Kamu'
                font_size: '45sp'
                color: 1.0, 1.0, 1.0, 1.0
                font_name: "Font/Eracake.ttf"
                size_hint_y: None
                height: 90
                pos_hint: {'center_x': 0.5, 'top': 0.55}
                outline_color: 0.0, 0.0, 0.0, 1.0  # Warna stroke
                outline_width: 3
            TextInput:
                id: name_input
                hint_text: 'Masukkan Namamu'
                size_hint: (None, None)
                width: 300
                height: 40
                pos_hint: {'center_x': 0.5, 'top': 0.12}
                multiline: False  # Menonaktifkan kemampuan untuk membuat baris baru
        FloatLayout:
            RoundedButtonWithStroke:
                text: 'Simpan'
                size_hint: (None, None)
                size: (200, 50)
                pos_hint: {'center_x': 0.5, 'top': 0.8}
                on_press: root.save_name()

<RoundedButtonWithStroke@ButtonBehavior+Label>:
    canvas.before:
        Color:
            rgba: 0.502, 0.502, 0.502, 1.0 # 0.2, 0.6, 0.86, 1  # Warna latar belakang tombol
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [25]  # Radius sudut melengkung

        # Membuat garis stroke di sekitar tombol
        Color:
            rgba: 0.0, 0.0, 0.0, 1.0  # Warna stroke (hitam)
        Line:
            rounded_rectangle: [self.x, self.y, self.width, self.height, 25]  # Bentuk rounded sesuai tombol
            width: 1.5  # Ketebalan stroke (2 pixels)

    font_size: '20sp'
    color: 1, 1, 1, 1  # Warna teks putih
    bold: True
    halign: 'center'

<LayarScreen>:  # Mengganti HomeScreen ke LayarScreen
    # canvas.before:
    #     Color:
    #         rgba: 0.65, 0.65, 0.65, 1.0 # 0.408, 0.992, 0.894, 1.0 => Warna aqua/turquoise
    #     Rectangle:
    #         pos: self.pos
    #         size: self.size

    Image:
        source: 'Bg/Bg6.png'
        size_hint: (1, 1)
        size: self.size

    FloatLayout:
        Label:
            id: welcome_label  # Label untuk menampilkan nama yang disimpan
            text: 'Selamat Datang!'
            font_size: '35sp'
            font_name: "Font/Eracake.ttf"
            color: 1.0, 1.0, 1.0, 1.0
            size_hint: None, None
            halign: 'center'
            size: self.texture_size
            pos_hint: {'center_x': 0.5, 'top': 0.88}
            outline_color: 0.0, 0.0, 0.0, 1.0  # Warna stroke
            outline_width: 3

        # Wadah lainnya sama seperti sebelumnya
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (None, None)
            size: (650, 300)
            pos_hint: {'center_x': 0.52, 'top': 0.85}
            spacing: 125

            # Mempelajari Image Box
            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, None)
                size: (240, 180)
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 0.2
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                    # Color:
                    #     rgba: 0, 0, 0, 1  # Warna hitam untuk outline
                    # Line:
                    #     width: 1.5
                    #     rounded_rectangle: (self.x, self.y, self.width, self.height, 20)

                Image:
                # Label:
                    id: mempelajari_image  # Menambahkan id untuk akses di Python
                    source: 'Image/Mempelajari.png'
                    # text: 'Image'
                    font_size: '23sp'
                    font_name: "Font/PoetsenOne-Regular.ttf"
                    # color: 0.0, 0.0, 0.0, 1.0
                    size_hint: (1, 1)
                    width: 260
                    height: 260
                    halign: 'center'
                    pos_hint: {'center_x': 0.50}

            # Permainan Image Box
            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, None)
                size: (240, 180)
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 0.2
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                    # Color:
                    #     rgba: 0, 0, 0, 1  # Warna hitam untuk outline
                    # Line:
                    #     width: 1.5
                    #     rounded_rectangle: (self.x, self.y, self.width, self.height, 20)

                Image:
                # Label:
                    id: permainan_image  # Menambahkan id untuk akses di Python
                    source: 'Image/Permainan.png'
                    # text: 'Image'
                    font_size: '23sp'
                    font_name: "Font/PoetsenOne-Regular.ttf"
                    # color: 0.0, 0.0, 0.0, 1.0
                    size_hint: (1, 1)
                    width: 260
                    height: 260
                    halign: 'center'
                    pos_hint: {'center_x': 0.50}

        Label:
            text: 'Mempelajari'
            font_size: '23sp'
            font_name: "Font/Mogra-Regular.ttf"
            color: 1.0, 1.0, 1.0, 1.0
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x': 0.337, 'top': 0.34}
            outline_color: 0.0, 0.0, 0.0, 1.0  # Warna stroke
            outline_width: 3

        Label:
            text: 'Permainan'
            font_size: '23sp'
            font_name: "Font/Mogra-Regular.ttf"
            color: 1.0, 1.0, 1.0, 1.0
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x': 0.665, 'top': 0.34}
            outline_color: 0.0, 0.0, 0.0, 1.0  # Warna stroke
            outline_width: 3

        # BoxLayout untuk Icon Exit dan Gear
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (None, None)
            size: (100, 50)
            pos_hint: {'right': 0.88, 'top': 0.96}
            spacing: 30

            Image:
                id: profil_icon
                source: 'Icon/profil.png'  # Gantilah dengan path ikon profil Anda
                size_hint: (None, None)  # Nonaktifkan ukuran otomatis
                size: (50, 50)  # Ukuran ikon secara manual

            # Icon Gear
            Image:
                id: gear_icon
                source: 'Icon/Gear.png'
                size_hint: (None, None)  # Nonaktifkan ukuran otomatis
                size: (50, 50)  # Atur ukuran ikon secara manual

            # Icon Exit
            Image:
                id: exit_icon
                source: 'Icon/Exit.png'
                size_hint: (None, None)  # Nonaktifkan ukuran otomatis
                size: (50, 50)  # Atur ukuran ikon secara manual

        # Widget Pengaturan
        FloatLayout:
            id: settings_widget
            size_hint: (0.5, 0.7)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            opacity: 0  # Widget tersembunyi secara default
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.85  # Warna latar belakang dengan transparansi
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]

            # Icon silang untuk menutup widget
            Image:
                source: 'Icon/Close.png'
                size_hint: (None, None)
                size: (35, 35)
                pos_hint: {'right': 0.97, 'top': 0.97}
                on_touch_down: root.close_settings_widget()  # Fungsi untuk menutup widget

            # Label Pengaturan
            Label:
                text: 'Pengaturan'
                font_size: '25sp'
                font_name: "Font/Eracake.ttf" #"Font/PoetsenOne-Regular.ttf"
                color: 1.0, 1.0, 1.0, 1.0
                pos_hint: {'center_x': 0.5, 'y': 0.35}

            # Icon Music dan Slider Volume
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1, 0.2)
                pos_hint: {'center_x': 0.6, 'top': 0.65}
                spacing: 25

                Image:
                    source: 'Icon/Music.png'
                    size_hint: (None, None)
                    size: (40, 40)
                    pos_hint: {'center_x': 0.6, 'top': 0.65}
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1  # Warna latar belakang dengan transparansi
                        RoundedRectangle:
                            pos: self.pos
                            size: (70, 70)
                            radius: [50]

                Slider:
                    id: music_slider
                    min: 0
                    max: 100
                    value: 50
                    on_value: root.update_volume_label('music', self.value)

                Label:
                    id: music_volume_label
                    text: '50%'
                    font_size: '18sp'
                    color: 1.0, 1.0, 1.0, 1.0

            # Icon Speaker dan Slider Volume
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1, 0.2)
                pos_hint: {'center_x': 0.6, 'top': 0.45}
                spacing: 25

                Image:
                    source: 'Icon/Speaker.png'
                    size_hint: (None, None)
                    size: (40, 40)
                    pos_hint: {'center_x': 0.6, 'top': 0.45}
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1  # Warna latar belakang dengan transparansi
                        RoundedRectangle:
                            pos: self.pos
                            size: (70, 70)
                            radius: [50]

                Slider:
                    id: speaker_slider
                    min: 0
                    max: 100
                    value: 50
                    on_value: root.update_volume_label('speaker', self.value)

                Label:
                    id: speaker_volume_label
                    text: '50%'
                    font_size: '18sp'
                    color: 1.0, 1.0, 1.0, 1.0

