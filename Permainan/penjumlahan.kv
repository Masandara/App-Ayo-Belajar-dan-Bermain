<PenjumlahanScreen>:
    # canvas.before:
    #     Color:
    #         rgba: 0.894, 0.894, 0.894, 1.0  # Latar belakang abu-abu terang
    #     Rectangle:
    #         pos: self.pos
    #         size: self.size

    Image:
        source: 'Bg/Bg7.png'
        size_hint: (1, 1)
        size: self.size

    FloatLayout:
        # Tombol navigasi (panah ke kiri) dengan lingkaran
        FloatLayout:
            size_hint: None, None
            size: 1200, 185
            pos_hint: {'center_x': 0.5, 'top': 1.14}
            # canvas.before:
            #     Color:
            #         rgba: 0.0, 0.0, 0.0, 0.25  # Warna bayangan hitam transparan
            #     Ellipse:
            #         pos: self.x + 1, self.y - 3
            #         size: self.size

            #     Color:
            #         rgba: 0.0, 1.0, 1.0, 1.0  # Warna latar belakang cyan
            #     Ellipse:
            #         pos: self.pos
            #         size: self.size

        FloatLayout:
            size_hint: None, None
            size: 60, 60
            pos_hint: {'x': 0.03, 'top': 0.96}

            canvas.before:
                Color:
                    rgba: 0.502, 0.502, 0.502, 1.0  # Warna lingkaran abu-abu
                Ellipse:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 0, 0, 0, 1  # Garis luar hitam
                Line:
                    width: 1.5
                    circle: (self.center_x, self.center_y, 30.5)
                    dash_length: 2
                    dash_offset: 1

            Image:
                source: 'Image/arrow-left.png'
                size_hint: None, None
                size: 35, 35
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Button:
                background_color: 0, 0, 0, 0
                size_hint: None, None
                size: 60, 60
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_press: root.go_to_permainan()  # Kembali ke layar permainan

        # Label judul "PENJUMLAHAN"
        Label:
            text: 'PENJUMLAHAN'
            font_size: '32sp'
            font_name: 'Font/Eracake.ttf'
            color: 1.0, 1.0, 1.0, 1.0  # Warna teks putih
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x': 0.5, 'top': 0.87}
            outline_color: 0.0, 0.0, 0.0, 1.0  # Warna outline hitam
            outline_width: 3

        # Label soal penjumlahan
        Label:
            id: soal_label
            text: root.soal
            font_size: '60sp'
            font_name: 'Font/Eracake.ttf'  # Font angka
            color: 0, 0, 0, 1  # Warna hitam
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x': 0.42, 'center_y': 0.71}

        # Kotak apel untuk angka 2 dengan radius 20 dan apel di tengah
        GridLayout:
            id: kotak_buah_a  # ID untuk kotak apel angka 2
            cols: 3
            rows: 4
            spacing: 20
            padding: 15, 15, 15, 15
            size_hint: None, None
            size: 225, 285  # Ukuran tetap untuk wadah X, Y
            pos_hint: {'x': 0.21, 'center_y': 0.4}
            canvas.before:
                Color:
                    rgba: 1.0, 1.0, 1.0, 0.2  # Warna kotak putih
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]  # Radius di setiap sudut
                Color:
                    rgba: 0, 0, 0, 1  # Warna hitam untuk outline
                Line:
                    width: 1.5
                    rounded_rectangle: (self.x, self.y, self.width, self.height, 20)

        # Kotak apel dengan radius 20 dan apel di tengah
        GridLayout:
            id: kotak_buah_b  # ID untuk kotak apel angka 6
            cols: 3
            rows: 4
            spacing: 20
            padding: 15, 15, 15, 15
            size_hint: None, None
            size: 225, 285  # Ukuran tetap untuk wadah
            pos_hint: {'x': 0.45, 'center_y': 0.4}
            canvas.before:
                Color:
                    rgba: 1.0, 1.0, 1.0, 0.2  # Warna kotak putih
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]  # Radius di setiap sudut
                Color:
                    rgba: 0, 0, 0, 1  # Warna hitam untuk outline
                Line:
                    width: 1.5
                    rounded_rectangle: (self.x, self.y, self.width, self.height, 20)

        # Pilihan jawaban di sebelah kanan dengan radius 20
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 100, 300
            pos_hint: {'x': 0.7, 'center_y': 0.43}
            spacing: 25

            # Pilihan pertama (4) dengan radius 20
            Button:
                id: btn_jawaban_1  # ID untuk pilihan jawaban 1
                font_size: '40sp'
                font_name: 'Font/Eracake.ttf'
                color: 0, 0, 0, 1
                background_color: 1, 1, 1, 0
                size_hint: None, None
                size: 100, 100
                on_release: root.check_jawaban(int(self.text))
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 0.2
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                    Color:
                        rgba: 0, 0, 0, 1  # Warna cyan untuk stroke
                    Line:
                        width: 1.5
                        rounded_rectangle: (self.x, self.y, self.width, self.height, 20)

            # Pilihan kedua (8) dengan radius 20
            Button:
                id: btn_jawaban_2  # ID untuk pilihan jawaban 2
                font_size: '40sp'
                font_name: 'Font/Eracake.ttf'
                color: 0, 0, 0, 1
                background_color: 1, 1, 1, 0
                size_hint: None, None
                size: 100, 100
                on_release: root.check_jawaban(int(self.text))
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 0.2
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                    Color:
                        rgba: 0, 0, 0, 1  # Warna cyan untuk stroke
                    Line:
                        width: 1.5
                        rounded_rectangle: (self.x, self.y, self.width, self.height, 20)

            # Pilihan ketiga (9) dengan radius 20
            Button:
                id: btn_jawaban_3  # ID untuk pilihan jawaban 3
                font_size: '40sp'
                font_name: 'Font/Eracake.ttf'
                color: 0, 0, 0, 1
                background_color: 1, 1, 1, 0
                size_hint: None, None
                size: 100, 100
                on_release: root.check_jawaban(int(self.text))
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 0.2
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                    Color:
                        rgba: 0, 0, 0, 1  # Warna cyan untuk stroke
                    Line:
                        width: 1.5
                        rounded_rectangle: (self.x, self.y, self.width, self.height, 20)
