        # Pilihan jawaban di sebelah kanan dengan radius 20
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 100, 300
            pos_hint: {'x': 0.79, 'center_y': 0.35}
            spacing: 30

            # Pilihan pertama (4) dengan radius 20
            Button:
                id: btn_jawaban_1  # ID untuk pilihan jawaban 1
                text: 'Jawaban 1'
                font_size: '40sp'
                font_name: 'Font/Eracake.ttf'
                color: 0, 0, 0, 1
                background_normal: ''
                background_color: 1, 1, 1, 1
                size_hint: None, None
                size: 110, 110
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                on_release: root.check_jawaban(int(self.text))

